<p id="notice"><%= notice %></p><br>

<%= link_to "Logout (#{current_user.email})", destroy_user_session_path, :method => :delete ,class:'alert alert-success'%>
<div class="row">
  <div class="col-sm-8">
      <h1>Photos</h1>
        <div class="media">
          <div class="media-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Album</th>
              <th>User</th>
              <th>Picture</th>
              <th>Tags</th>
              <th colspan="3">Action </th>
            </tr>
          </thead>

          <tbody>
            <% @photos.each do |photo| %>
              <tr>
                <td><%= photo.album_id %></td>
                <td><%= photo.user_id %></td>
                <td><% if photo.pictures.attached? %>
                <% photo.pictures.each do |pic| %>
                <%= image_tag(pic, :class => "pic", style: "height:50px; witdth:50px;") %>
                <% end %>
            <% end %></td>
              <td><small>Tags: <%= raw photo.tags.map(&:name).map { |t| link_to t, root_path(t) }.join(', ') %></small></td>

                <td><%= link_to 'Show', album_photo_path(photo.album_id, photo), class:'btn btn-mini btn-success' %></td>
                <td><%= link_to 'Edit', edit_album_photo_path(photo.album_id, photo), class:'btn btn-mini btn-info'%></td>
                <%#= raise album_id.inspect%>
                <td><%= link_to "Delete", album_photo_path(photo.album_id, photo), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-mini btn-danger' %></td> 
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
        </div>
        <br>
     <%= link_to 'New Photo', new_album_photo_path, class:'btn btn-mini btn-warning' %>|
      <%= link_to ' home ', root_path, class:'btn btn-mini btn-primary' %> |
      <%= link_to 'Album list', albums_path , class:'btn btn-mini btn-dark'%>|
  </div>


  <div class="col-sm-4 btn btn-outline-warning">
    <h1>ALbum Gallary</h1>
        <div class="gallery"><br><br><br><br>
            <% @photos.each do |photo| %>
              <% if photo.pictures.attached? %>
                <% photo.pictures.each do |pic| %>
                  <%= image_tag(pic, :class => "pic", style: "height:100px; witdth:100px;") %>
                <% end %>
            <% end %>
        <% end %>
        </div>
      </div>









