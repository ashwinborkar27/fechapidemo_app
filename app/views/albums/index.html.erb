<p id="notice"><%= notice %></p>

<h1>Albums</h1>
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"> Action</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.description %></td>
        <td><%= album.user_id %></td>
        <td><%= link_to 'Show', album , class:'btn btn-mini btn-info'%></td>
        <td><%= link_to 'Edit', edit_album_path(album), class:'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>


<br>
<%= link_to 'New Album', new_album_path, class:'btn btn-mini btn-warning' %>
